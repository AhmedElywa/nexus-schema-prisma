{
  "name": "root",
  "private": true,
  "devDependencies": {
    "husky": "4.2.5",
    "lerna": "3.22.1",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern \"**/*.*(ts|tsx)\" --staged"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
